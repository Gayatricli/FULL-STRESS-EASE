<?xml version="1.0" encoding="utf-8"?>
<!-- Metric Card for Text Values (No Progress Bar) -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="28dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_metric_card_accent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Label -->
        <TextView
            android:id="@+id/tvMetricLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Dominant Concern"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <!-- Text Value -->
        <TextView
            android:id="@+id/tvMetricTextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Work-related anxiety"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
