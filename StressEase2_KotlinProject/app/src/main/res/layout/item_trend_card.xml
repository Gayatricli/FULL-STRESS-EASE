<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFF3E2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/trendIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_alert_circle"
                android:contentDescription="Trend icon"
                app:tint="#F17A2B"/>

            <TextView
                android:id="@+id/trendTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Mood Trend"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/trendPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+12%"
                android:textSize="16sp"
                android:textColor="#F17A2B"
                android:fontFamily="@font/poppins_bold"/>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/trendDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Your mood has been improving over the past week"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_bold"/>

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/trendProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:indicatorColor="#F17A2B"
            app:trackColor="#FFE3B0"
            app:trackCornerRadius="8dp"
            app:trackThickness="8dp"
            android:progress="65"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

