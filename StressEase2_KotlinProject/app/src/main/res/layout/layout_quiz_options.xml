<?xml version="1.0" encoding="utf-8"?>
<!-- Reusable Quiz Option Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="@drawable/bg_option_selector"
    android:layout_marginBottom="12dp">

    <!-- Option Number Badge -->
    <TextView
        android:id="@+id/tvOptionNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:textColor="#6C757D"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/bg_number_badge"
        android:layout_marginEnd="12dp" />

    <!-- Radio Button -->
    <RadioButton
        android:id="@+id/radioOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option_text"
        android:textSize="18sp"
        android:textColor="#475569"
        android:buttonTint="#FFA726"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginEnd="12dp" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Checkmark (Hidden by default) -->
    <TextView
        android:id="@+id/tvCheckmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“"
        android:textSize="24sp"
        android:textColor="#10b981"
        android:visibility="gone" />

</LinearLayout>
