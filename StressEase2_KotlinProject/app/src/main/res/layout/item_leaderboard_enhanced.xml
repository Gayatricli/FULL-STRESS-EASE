<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Leaderboard Item Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardLeaderboardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Rank Badge / Medal -->
        <FrameLayout
            android:id="@+id/rankContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Medal Emoji (visible for top 3) -->
            <TextView
                android:id="@+id/tvMedalEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ¥‡"
                android:textSize="48sp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="HardcodedText" />

            <!-- Rank Badge (visible for rank 4+) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/rankBadge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/rankBadgeBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_purple_pink"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRankNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#4"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="#4" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- User Avatar with ring -->
        <androidx.cardview.widget.CardView
            android:id="@+id/avatarCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toEndOf="@id/rankContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Ring indicator for top 3 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/avatarRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ring_gold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="User Avatar"
                    tools:src="@tools:sample/avatars" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- User Info Section -->
        <LinearLayout
            android:id="@+id/userInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/avatarCard"
            app:layout_constraintEnd_toStartOf="@id/scoreContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Username with streak badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Username"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Sarah_Sunshine" />

                <!-- Streak Badge -->
                <LinearLayout
                    android:id="@+id/streakBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_orange_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvStreakDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="7"
                        android:textColor="#C2410C"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="14" />
                </LinearLayout>
            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Trending Icon -->
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_trending_up"
                    android:contentDescription="Trending"
                    app:tint="#64748B" />

                <TextView
                    android:id="@+id/tvMoodScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="850 pts"
                    android:textColor="#64748B"
                    android:textSize="12sp"
                    tools:text="950 pts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="â€¢"
                    android:textColor="#CBD5E1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvLogsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="85 logs"
                    android:textColor="#64748B"
                    android:textSize="12sp"
                    tools:text="85 logs" />
            </LinearLayout>
        </LinearLayout>

        <!-- Score Container -->
        <LinearLayout
            android:id="@+id/scoreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_score_badge"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minWidth="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvScoreValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="950" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:textColor="#64748B"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- "You!" Badge for current user -->
        <TextView
            android:id="@+id/tvYouBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            android:background="@drawable/bg_gradient_purple_pink"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="You!"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- Highlight border for current user -->
        <View
            android:id="@+id/highlightBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_highlight_border"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>