<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_chat_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Decorative large emoji with subtle background -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_emoji_bg"
                android:alpha="0.3" />

            <TextView
                android:id="@+id/emojiDecor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š"
                android:textSize="110sp"
                android:layout_gravity="center"
                android:gravity="center" />
        </FrameLayout>

        <!-- Title with better spacing -->
        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Mood and Chat Summary"
            android:textColor="@color/freud_text_dark"
            android:textSize="22sp"
            android:fontFamily="@font/ruby_dance"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="6dp" />

        <!-- Subtitle with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="28dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_sparkles"
                android:layout_marginEnd="6dp"
                android:contentDescription="Sparkles"
                app:tint="@color/freud_primary" />

            <TextView
                android:id="@+id/tvSummarySub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick snapshot of your wellbeing"
                android:textColor="@color/freud_text_hint"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Stats Grid (2 columns for compact view) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="14dp">

            <!-- Total Chats - Enhanced -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/freud_card_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_blue_light"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_chat_bubble"
                            android:contentDescription="Chat icon"
                            app:tint="@color/freud_primary" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvTotalChats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/freud_text_dark"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Chats"
                        android:textColor="@color/freud_text_hint"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Total Moods - Enhanced -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:backgroundTint="@color/freud_card_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ˜Š"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvTotalMoods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/freud_primary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moods Logged"
                        android:textColor="@color/freud_text_hint"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Most Common Emotion - Enhanced -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/freud_card_bg"
            app:cardCornerRadius="22dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_purple_light">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_heart"
                        android:contentDescription="Emotion icon"
                        app:tint="@color/freud_primary" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Common Emotion"
                        android:textColor="@color/freud_text_hint"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvMostCommonEmotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="@color/freud_text_dark"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="Arrow"
                    app:tint="@color/freud_surface_border" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Most Common Mood - Enhanced -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/freud_card_bg"
            app:cardCornerRadius="22dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_pink_light">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Mood icon"
                        app:tint="@color/freud_primary" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Common Mood"
                        android:textColor="@color/freud_text_hint"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvMostCommonMood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="@color/freud_text_dark"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="Arrow"
                    app:tint="@color/freud_surface_border" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tomorrow's Stress Prediction - Premium Style -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/freud_primary"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_white_alpha_strong">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_brain"
                            android:contentDescription="Brain icon"
                            app:tint="@color/freud_white" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomorrow's Stress"
                            android:textColor="@color/freud_white"
                            android:alpha="0.85"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="0.03" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvStressLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moderate"
                                android:textColor="@color/freud_white"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold" />

                            <ImageView
                                android:id="@+id/ivStressTrend"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_trending_flat"
                                android:contentDescription="Stress trend"
                                app:tint="@color/freud_white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- AI Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_white_alpha"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_sparkles"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="AI"
                        app:tint="@color/freud_white" />
                    <TextView
                        android:id="@+id/tvAiBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Prediction"
                        android:textColor="@color/freud_white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Overall Status - Enhanced -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/freud_secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_activity"
                    android:alpha="0.9"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Activity"
                    app:tint="@color/freud_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Status"
                    android:textColor="@color/freud_text_dark"
                    android:alpha="0.85"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.05"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/tvOverallStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mixed Mood"
                    android:textColor="@color/freud_text_dark"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CTA Buttons - Enhanced -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:text="Back"
                android:textColor="@color/freud_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/bg_rounded_button_orange"
                android:elevation="6dp"
                android:textAllCaps="false"
                android:letterSpacing="0.02"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:text="Next"
                android:textColor="@color/freud_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/bg_rounded_button_orange"
                android:elevation="6dp"
                android:textAllCaps="false"
                android:letterSpacing="0.02"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>