<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_breathing_gradient">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/freud_primary" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ruby_dance"
            android:text="Guided Breathing Exercise"
            android:textColor="@color/text_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Instruction Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Follow the breathing pattern below to relax your mind and body."
            android:textColor="@color/text_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Breathing Visual Container (Center) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/breathingContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="32dp"
        android:elevation="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="140dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/controlSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_breathing_circle">

            <!-- Animated Breathing Circle -->
            <View
                android:id="@+id/breathingCircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_breathing_pulse" />

            <!-- Center Content -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Breathing Phase Text -->
                <TextView
                    android:id="@+id/tvBreathingPhase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/permanent_marker"
                    android:text="Ready"
                    android:textColor="@color/freud_white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Timer Text -->
                <TextView
                    android:id="@+id/tvBreathingTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="4"
                    android:textColor="@color/freud_white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- Cycle Counter -->
                <TextView
                    android:id="@+id/tvCycleCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Cycle 0 of 5"
                    android:textColor="@color/freud_white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Control Section (Bottom) -->
    <LinearLayout
        android:id="@+id/controlSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/disclaimerSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="@style/FreudPrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:text="Start Exercise"
            android:textSize="18sp"
            app:backgroundTint="@null" />

        <!-- Pause/Resume Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_outline"
            android:fontFamily="@font/poppins_bold"
            android:minHeight="56dp"
            android:text="Pause"
            android:textAllCaps="false"
            android:textColor="@color/freud_primary"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="@null" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_outline"
            android:fontFamily="@font/poppins_bold"
            android:minHeight="56dp"
            android:text="Stop Exercise"
            android:textAllCaps="false"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="@null" />
    </LinearLayout>

    <!-- Disclaimer Section (Bottom) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/disclaimerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/info_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_alert_circle"
                app:tint="@color/info_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="This exercise is intended for relaxation and is not a medical treatment. If you feel uncomfortable, stop immediately."
                android:textColor="@color/info_text"
                android:textSize="13sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Completion Overlay (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/completionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6FFF3E2"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/freud_white"
            app:cardCornerRadius="28dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Success Icon -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_success_circle">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/success_green" />
                </FrameLayout>

                <!-- Completion Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/permanent_marker"
                    android:text="Well Done!"
                    android:textColor="@color/text_dark"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Take a moment to notice how you feel."
                    android:textAlignment="center"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <!-- Optional Mood Check -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogMood"
                    style="@style/FreudPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:minHeight="56dp"
                    android:text="Log Your Mood"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_button_outline"
                    android:fontFamily="@font/poppins_bold"
                    android:minHeight="56dp"
                    android:text="Finish"
                    android:textAllCaps="false"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
