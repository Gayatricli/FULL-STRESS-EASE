<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emoji_bulb"
            android:textSize="28sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/personalized_tips"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#64748B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_you"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#7C3AED"
            android:background="@drawable/bg_number_badge"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <!-- Decorative divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bg_celebration_glow"
        android:layout_marginBottom="16dp" />

    <!-- Suggestions content -->
    <TextView
        android:id="@+id/tvSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggestions_text"
        android:textColor="#1E293B"
        android:textSize="16sp"
        android:lineSpacingExtra="8dp"
        android:letterSpacing="0.01" />

    <!-- CTA (Call to Action) / Encouragement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_streak_badge"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_wellness_journey"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#7C3AED" />
    </LinearLayout>

</LinearLayout>
