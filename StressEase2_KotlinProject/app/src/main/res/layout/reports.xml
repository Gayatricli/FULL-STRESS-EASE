<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_chat_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">
        <!-- Decorative Background -->
        <ImageView
            android:id="@+id/decorBlobTopLeft"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_blob_purple"
            android:alpha="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/decorCirclesTopRight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_circles_group"
            android:alpha="0.35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/decorFlowerLeft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_flower_shape"
            android:alpha="0.3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Large Emoji Background -->
        <TextView
            android:id="@+id/largeIconBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="140sp"
            android:alpha="0.12"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:id="@+id/achievementBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Analysis Complete"
                    android:textColor="@color/white"

                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="ðŸ“ˆ"
                        android:textSize="36sp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:id="@+id/tvReportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition Report"
                        android:textColor="#1E293B"
                        android:textSize="32sp"
                        android:fontFamily="@font/ruby_dance" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvReportStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Analyzing your wellness journey"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:gravity="center"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/bg_streak_badge">

                    <TextView
                        android:text="âœ¨"
                        android:textSize="18sp"
                        android:layout_marginEnd="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:id="@+id/tvReportStatus"
                        android:text="Your Progress is Amazing!"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#059669"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bar Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/barChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="ðŸ“Š"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:text="Emotion Distribution"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Last 7 Days"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_number_badge"
                        android:padding="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_celebration_glow"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/emotionBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pie Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pieChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/barChartCard">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ðŸŽ¯"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Mood Breakdown"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Overview"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_number_badge"
                        android:padding="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_celebration_glow"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/moodPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Line Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/lineChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/pieChartCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="ðŸ“ˆ"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />


                    <TextView
                        android:text="Mood Trend Analysis"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Weekly"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_number_badge"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_celebration_glow"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/moodTrendChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_streak_badge"
                    android:padding="16dp">

                    <TextView
                        android:text="ðŸ’¡"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:text="Your mood is trending upward! Keep up the great work! ðŸŽ‰"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#059669"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- â­ FINAL UPDATED BUTTONS (ROUNDED RECTANGLE STYLE) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/lineChartCard">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:text="What would you like to do?"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#475569"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>


                <!-- Buttons: Back | Summary | Next (regular Button version) -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnBack"
                        style="@style/FreudPrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="@string/Back"
                        android:textSize="14sp"
                        android:includeFontPadding="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnViewSummary"
                        style="@style/FreudPrimaryButton"
                        android:layout_width="30dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="@string/summary"
                        android:textSize="14sp"
                        android:includeFontPadding="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnNext"
                        style="@style/FreudPrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="@string/next"
                        android:textSize="14sp"
                        android:includeFontPadding="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:textAllCaps="false" />
                </LinearLayout>



                <TextView
                    android:text="ðŸŽŠ Great job tracking your wellness! ðŸŽŠ"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#9C27B0"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonsCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>