<?xml version="1.0" encoding="utf-8"?>
<!-- Animated Inner Breathing Circle (Pulsing Effect) -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <gradient
        android:angle="135"
        android:endColor="#F17A2B"
        android:centerColor="#F7931E"
        android:startColor="#FF6B35"
        android:type="linear" />

    <stroke
        android:width="1dp"
        android:color="#FFE0C2" />
</shape>
